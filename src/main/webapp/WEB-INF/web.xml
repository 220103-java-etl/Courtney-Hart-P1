<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>dev.hart.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>dev.hart.servlets.UserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ReimbursementServlet</servlet-name>
        <servlet-class>dev.hart.servlets.ReimbursementServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>dev.hart.servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatusServlet</servlet-name>
        <servlet-class>dev.hart.servlets.StatusServlet</servlet-class>
    </servlet>

    <servlet-mapping> <!--What url mappings to send to the servlet to process-->
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/users</url-pattern> <!-- to my user class?-->
    </servlet-mapping>


    <servlet-mapping> <!--What url mappings to send to the servlet to process-->
        <servlet-name>ReimbursementServlet</servlet-name>
        <url-pattern>/reimbursements</url-pattern>
    </servlet-mapping>

    <servlet-mapping> <!--What url mappings to send to the servlet to process-->
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping> <!--What url mappings to send to the servlet to process-->
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet-mapping> <!--What url mappings to send to the servlet to process-->
        <servlet-name>StatusServlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
    
</web-app>